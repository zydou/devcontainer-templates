{
  "name": "Hugo",
  // "image": "zydou/devcontainer-hugo:0.108.0"
  "image": "debian:stable-slim",
  // "runArgs": ["--name=hugo-devcontainer"], // Docker CLI args

  // ðŸ‘‡ Features to add to the Dev Container. More info: https://containers.dev/implementors/features.
  "features": {
    "ghcr.io/zydou/devcontainer-features/set-user:latest": {
      "username": "hugo"
    },
    "ghcr.io/devcontainers/features/git:latest": {
      "version": "os-provided"
    },
    "ghcr.io/devcontainers/features/hugo:latest": {
      "version": "${templateOption:hugoVersion}",
      "extended": true
    }
  },
  "overrideFeatureInstallOrder": [
    "ghcr.io/zydou/devcontainer-features/set-user"
  ],

  // ðŸ‘‡ Configure tool-specific properties.
  "customizations": {
    // Configure properties specific to VS Code.
    "vscode": {
      // Set *default* container specific settings.json values on container create.
      "settings": {
        "html.format.templating": true,
        "terminal.integrated.defaultProfile.linux": "bash"
      },
      // Add the IDs of extensions you want installed when the container is created.
      "extensions": [
        "tamasfe.even-better-toml",
        "davidanson.vscode-markdownlint",
        "yzhang.markdown-all-in-one"
      ]
    }
  },
  // Use 'forwardPorts' to make a list of ports inside the container available locally.
  "forwardPorts": [1313],
  // ðŸ‘‡ Uncomment to connect as root instead. More info: https://aka.ms/dev-containers-non-root.
  "remoteUser": "hugo"
}
