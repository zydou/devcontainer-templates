{
  "id": "python",
  "version": "1.1.3",
  "name": "Python Environment",
  "description": "A Template of Python development environment",
  "documentationURL": "https://github.com/zydou/devcontainer-templates/tree/main/src/python",
  "licenseURL": "https://github.com/zydou/devcontainer-templates/blob/main/LICENSE",
  "publisher": "zydou",
  "keywords": [
    "python"
  ],
  "options": {
    "imageVariant": {
      "type": "string",
      "description": "Debian version (use bullseye on local arm64/Apple Silicon):",
      "proposals": [
        "bullseye",
        "buster"
      ],
      "default": "bullseye"
    },
    "pythonVersion": {
      "type": "string",
      "description": "python version",
      "proposals": [
        "3.11.1",
        "3.10.9",
        "3.9"
      ],
      "default": "3.10"
    },
    "pipx_utils": {
      "type": "string",
      "description": "Pipx tools to install.(space-delimited string)",
      "proposals": [
        "yapf",
        "black==22.12.0",
        "black yapf==0.32.0",
        "none"
      ],
      "default": "pre-commit flake8 black isort"
    },
    "pip_pkgs": {
      "type": "string",
      "description": "Pip packages to install.(space-delimited string)",
      "proposals": [
        "pytest",
        "black==22.12.0",
        "black yapf==0.32.0",
        "none"
      ],
      "default": "ipdb pytest"
    }
  },
  "platforms": [
    "Any"
  ]
}